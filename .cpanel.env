# Environment Configuration
CPANEL=True
SECRET_KEY=your-super-secure-production-secret-key-here-make-it-very-long-and-random
DEBUG=False
ALLOWED_HOSTS=app.autowash.co.ke,autowash.co.ke,www.autowash.co.ke,*.autowash.co.ke

# cPanel-specific Configuration
CPANEL_DOMAIN=app.autowash.co.ke
CPANEL_SUBDOMAIN=app

# Database Configuration (cPanel MySQL/PostgreSQL)
# For MySQL (more common in cPanel)
DATABASE_URL=mysql://autowash_user:your_db_password@localhost/autowash_db

# Alternative for PostgreSQL (if available)
# DATABASE_URL=postgresql://autowash_user:your_db_password@localhost/autowash_db

# Redis Configuration (if available through cPanel or external service)
# Option 1: External Redis service (recommended)
REDIS_URL=redis://default:password@redis-12345.c1.us-east-1-1.ec2.cloud.redislabs.com:12345

# Option 2: If Redis not available, use database cache (fallback)
# REDIS_URL=

# Email Configuration (cPanel email)
EMAIL_HOST=mail.autowash.co.ke
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@autowash.co.ke
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=Autowash <noreply@autowash.co.ke>

# Alternative SMTP configuration for cPanel
# EMAIL_HOST=localhost
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# SMS Configuration (Production)
SMS_API_KEY=your_production_sms_api_key
SMS_USERNAME=your_sms_username

# M-Pesa Configuration (Production)
MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_SHORTCODE=your_production_shortcode
MPESA_PASSKEY=your_production_mpesa_passkey
MPESA_CALLBACK_URL=https://app.autowash.co.ke/api/mpesa/callback/

# Static/Media Files (cPanel)
# These will be served by Apache/Nginx on cPanel
STATIC_URL=/static/
MEDIA_URL=/media/

# Monitoring (Optional for cPanel)
SENTRY_DSN=your_sentry_dsn_here

# cPanel Optimization Settings
CPANEL_PYTHON_VERSION=3.9
CPANEL_WSGI_FILE=passenger_wsgi.py

# Security Settings for cPanel
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https